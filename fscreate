

#jenkins
parameters {
  string(name: 'host', defaultValue: 'all', description: 'Enter hostname')

 }
        
        stage('Create partitions') {
            steps {
                echo "Creating partitions..."
                ansiColor('xterm') {
                    ansiblePlaybook( 
                        playbook: 'src/ansible/create_fs.yml',
                        inventory: 'environments/prod/inventory/host.ini',
                        limit:  '${params.host}',
                        colorized: true) 
                }
            }
        
        }

