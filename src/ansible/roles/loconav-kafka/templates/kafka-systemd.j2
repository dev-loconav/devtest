{{ ansible_managed | comment }}
[Unit]
Description=Kafka
After=network.target

[Service]
User=kafka
Group=kafka
ExecStart=/opt/kafka/bin/kafka-server-start.sh /opt/kafka/config/server.properties
Restart=on-abort

LimitMEMLOCK=infinity
LimitNOFILE=1048576
LimitNPROC=32768
LimitAS=infinity

[Install]
WantedBy=multi-user.target
